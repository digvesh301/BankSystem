<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <title>trasfer</title>
    </head>
    <body>


        <center style="position: absolute;transform: translate(-50%, -55%);text-align: center;left: 50%;top: 45%;">
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    {{#each result}}
                        <h5 class="card-title">Name :
                            {{ this.name }}</h5>
                        <h5 class="card-title">City :
                            {{ this.city }}</h5>
                        <h5 class="card-title">AccountNumber :
                            {{ this.accountNumber }}</h5>
                        <h5 class="card-title">Balance :
                            {{ this.balance }}</h5>
                        <h5 class="card-title">
                            <form action="/transfer" method="POST">
                                money:<input type="number" name="money" placeholder="Enter Money"/>
                                to:<input type="number" name="toac" placeholder="Enter accountnumber"/>
                                <input type="hidden" name="fromac" value={{ this.accountNumber }}/><br><br>
                                <input type="submit" class="btn btn-primary" value="click"/>
                            </form>
                        </h5>


                    {{/each}}

                </div>
            </div>
        </center>
    </body>
</html>
